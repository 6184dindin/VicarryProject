<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_arrow_back_pan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layoutPhoneNumberAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại đăng ký tài khoản của bạn"
                    android:textSize="@dimen/_17sdp"
                    android:fontFamily="@font/times"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvPhoneNumberAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0903980564"
                    android:textSize="@dimen/_17sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/times"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutInputPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_50sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chào bạn! Mừng bạn đã trở lại"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/timesbi"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/timesi"
                        android:padding="@dimen/_10sdp"
                        android:hint="Nhập mật khẩu"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:backgroundTint="@color/gray_text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quên mật khẩu ?"
                    android:textColor="@color/blue"
                    android:textAllCaps="false"
                    android:background="@color/transition"
                    android:fontFamily="@font/roman"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:background="@drawable/bg_edit_text_update_personal_info_pan"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/times"
                android:text="Tiếp theo"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp" />
        </LinearLayout>
    </LinearLayout>
</layout>