<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:background="@drawable/bg_item_rcv_su"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvTimeTHO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/11/2020 9:30"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBankCodeTHO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIDV"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTimeTHO" />

        <TextView
            android:id="@+id/tvCodeTHO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REF : 937452123"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBankCodeTHO" />

        <TextView
            android:id="@+id/tvStatusTHO"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/btn_orange_su"
            android:gravity="center"
            android:text="Vận chuyển"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPriceTHO"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_25sdp"
            android:gravity="center"
            android:text="+ 1.000.000"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvStatusTHO"
            app:layout_constraintTop_toBottomOf="@+id/tvStatusTHO" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>